<div class="container">
<h1>Best Birthday game ! </h1>

<ol>
  <% @letters.each do |letter|%>
  <div class="card"><li class="letter"><%= letter %></li></div>
  <% end %>
</ol>

<form action="/score" method="post">
  <input id="form" type="text" placeholder="Put your word here !" name="word">
  <input id="btn" type="submit"  value="Play!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
</div>


